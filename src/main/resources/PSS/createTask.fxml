<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PSS.InterfaceController">
   <children>
      <Button layoutX="36.0" layoutY="33.0" mnemonicParsing="false" onAction="#switchToHome" text="Back" />
      <Text layoutX="182.0" layoutY="86.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Create a Task" textAlignment="CENTER">
         <font>
            <Font size="41.0" />
         </font>
      </Text>
      <HBox alignment="BASELINE_CENTER" layoutX="102.0" layoutY="134.0" prefHeight="48.0" prefWidth="397.0" spacing="30.0">
         <children>
            <RadioButton fx:id="transientButton" mnemonicParsing="false" onAction="#displayRecurringAttributes" text="Transient">
               <toggleGroup>
                  <ToggleGroup fx:id="TaskType" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="recurringButton" mnemonicParsing="false" onAction="#displayRecurringAttributes" text="Recurring" toggleGroup="$TaskType" />
            <RadioButton fx:id="antiButton" mnemonicParsing="false" onAction="#displayRecurringAttributes" text="Anti" toggleGroup="$TaskType" />
         </children>
      </HBox>
      <TextField layoutX="102.0" layoutY="187.0" promptText="Task Name" />
      <ChoiceBox layoutX="107.0" layoutY="235.0" prefWidth="150.0" />
      <Label layoutX="58.0" layoutY="192.0" text="Name" />
      <Label layoutX="57.0" layoutY="240.0" prefHeight="17.0" prefWidth="33.0" text="Type" />
      <HBox id="endDateBox" fx:id="endDateBox" layoutX="307.0" layoutY="190.0" opacity="0.0" prefHeight="100.0" prefWidth="263.0" spacing="40.0">
         <children>
            <Label text="End Date" />
            <DatePicker prefHeight="26.0" prefWidth="145.0" />
         </children>
      </HBox>
   </children>
</AnchorPane>
